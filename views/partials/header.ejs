<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'My Booklist' %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Main stylesheet -->
  <link rel="stylesheet" href="/css/styles.css">

  <!-- Theme variables (inline for fast toggle) -->
  <style>
    :root {
      --bg: #f9f9f9;
      --text: #222;
      --card: #fff;
      --muted: #666;
      --accent: #007BFF;
    }
    [data-theme="dark"] {
      --bg: #0f1720;
      --text: #e6eef6;
      --card: #0b1116;
      --muted: #9fb0c7;
      --accent: #FFA500;
    }

    body {
      background: var(--bg);
      color: var(--text);
      transition: background .25s ease, color .25s ease;
    }
  </style>
</head>

<body>

<header class="container py-3 d-flex align-items-center justify-content-between">
  <a href="/" class="text-decoration-none">
    <h1 class="h4 text-accent mb-0">My Booklist</h1>
  </a>

  <div class="d-flex align-items-center gap-3">
    <!-- Dark Mode Toggle -->
    <button id="theme-toggle" class="btn btn-outline-secondary btn-sm">
